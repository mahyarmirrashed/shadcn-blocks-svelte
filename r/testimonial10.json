{
	"$schema": "https://shadcn-svelte.com/schema/registry-item.json",
	"name": "testimonial10",
	"title": "Testimonial10",
	"type": "registry:component",
	"description": "A testimonial block with a central quote, author's name, role, and avatar in a vertical layout.",
	"registryDependencies": [
		"avatar"
	],
	"meta": {
		"author": "mahyarmirrashed"
	},
	"files": [
		{
			"content": "<script lang=\"ts\" module>\n  import * as Avatar from \"$UI$/avatar/index.js\";\n  import { cn } from \"$UTILS$.js\";\n  import type { HTMLAttributes } from \"svelte/elements\";\n\n  type Testimonial10Props = {\n    quote?: string;\n    author?: {\n      name: string;\n      role: string;\n      avatar: {\n        src: string;\n        alt: string;\n      };\n    };\n  };\n</script>\n\n<script lang=\"ts\">\n  let {\n    quote = \"Lorem ipsum dolor sit amet consectetur adipisicing elit. Elig doloremque mollitia fugiat omnis! Porro facilis quo animi consequatur. Explicabo.\",\n    author = {\n      name: \"Customer Name\",\n      role: \"Role\",\n      avatar: {\n        src: \"https://deifkwefumgah.cloudfront.net/shadcnblocks/block/avatar-1.webp\",\n        alt: \"Customer Name\",\n      },\n    },\n    class: className,\n    ...restProps\n  }: Testimonial10Props & HTMLAttributes<HTMLElement> = $props();\n</script>\n\n<section class={cn(\"py-32\", className)} {...restProps}>\n  <div class=\"container\">\n    <div class=\"flex flex-col items-center text-center\">\n      <p class=\"mb-16 max-w-4xl px-8 font-medium lg:text-3xl\">\n        &ldquo;{quote}&rdquo;\n      </p>\n      <div class=\"flex items-center gap-2 md:gap-4\">\n        <Avatar.Root class=\"size-12 md:size-16\">\n          <Avatar.Image src={author.avatar.src} alt={author.avatar.alt} />\n          <Avatar.Fallback>{author.name}</Avatar.Fallback>\n        </Avatar.Root>\n        <div class=\"text-left\">\n          <p class=\"text-sm font-medium md:text-base\">{author.name}</p>\n          <p class=\"text-sm text-muted-foreground md:text-base\">\n            {author.role}\n          </p>\n        </div>\n      </div>\n    </div>\n  </div>\n</section>\n",
			"type": "registry:component",
			"target": "testimonial10.svelte"
		}
	]
}