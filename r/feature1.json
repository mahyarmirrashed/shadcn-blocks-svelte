{
	"$schema": "https://shadcn-svelte.com/schema/registry-item.json",
	"name": "feature1",
	"title": "Feature1",
	"type": "registry:component",
	"description": "A block with a 2-column layout featuring a title, description, two buttons, and an image.",
	"registryDependencies": [
		"button"
	],
	"meta": {
		"author": "mahyarmirrashed"
	},
	"files": [
		{
			"content": "<script lang=\"ts\" module>\n  import { Button } from \"$UI$/button/index.js\";\n  import { cn } from \"$UTILS$.js\";\n  import type { HTMLAttributes } from \"svelte/elements\";\n\n  type Feature1Props = {\n    title?: string;\n    description?: string;\n    image?: { src: string; alt: string };\n    buttons?: {\n      primary?: {\n        text: string;\n        url: string;\n      };\n      secondary?: {\n        text: string;\n        url: string;\n      };\n    };\n  };\n</script>\n\n<script lang=\"ts\">\n  let {\n    title = \"Blocks built with Shadcn & Tailwind\",\n    description = \"Hundreds of finely crafted components built with React, Tailwind and Shadcn UI. Developers can copy and paste these blocks directly into their project.\",\n    image = {\n      src: \"https://deifkwefumgah.cloudfront.net/shadcnblocks/block/placeholder-1.svg\",\n      alt: \"Placeholder here\",\n    },\n    buttons = {\n      primary: {\n        text: \"Get Started\",\n        url: \"https://shadcnblocks.com\",\n      },\n      secondary: {\n        text: \"Learn More\",\n        url: \"https://shadcnblocks.com\",\n      },\n    },\n    class: className,\n    ...restProps\n  }: Feature1Props & HTMLAttributes<HTMLElement> = $props();\n</script>\n\n<section class={cn(\"py-32\", className)} {...restProps}>\n  <div class=\"container\">\n    <div class=\"grid items-center gap-8 lg:grid-cols-2\">\n      <div\n        class=\"flex flex-col items-center text-center lg:items-start lg:text-left\"\n      >\n        <h1 class=\"my-6 mt-0 text-4xl font-semibold text-balance lg:text-5xl\">\n          {title}\n        </h1>\n        <p class=\"mb-8 max-w-xl text-muted-foreground lg:text-lg\">\n          {description}\n        </p>\n        <div\n          class=\"flex w-full flex-col justify-center gap-2 sm:flex-row lg:justify-start\"\n        >\n          {#if buttons.primary}\n            <Button href={buttons.primary.url} target=\"_blank\">\n              {buttons.primary.text}\n            </Button>\n          {/if}\n          {#if buttons.secondary}\n            <Button\n              variant=\"outline\"\n              href={buttons.secondary.url}\n              target=\"_blank\"\n            >\n              {buttons.secondary.text}\n            </Button>\n          {/if}\n        </div>\n      </div>\n      <img\n        src={image.src}\n        alt={image.alt}\n        class=\"max-h-96 w-full rounded-md object-cover\"\n      />\n    </div>\n  </div>\n</section>\n",
			"type": "registry:component",
			"target": "feature1.svelte"
		}
	]
}