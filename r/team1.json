{
	"$schema": "https://shadcn-svelte.com/schema/registry-item.json",
	"name": "team1",
	"title": "Team1",
	"type": "registry:component",
	"description": "A team showcase component with a title, subtitle, description, and a grid of member avatars, names, and roles, supporting up to 4 columns.",
	"registryDependencies": [
		"avatar"
	],
	"meta": {
		"author": "mahyarmirrashed"
	},
	"files": [
		{
			"content": "<script lang=\"ts\" module>\n  import * as Avatar from \"$UI$/avatar/index.js\";\n  import { cn } from \"$UTILS$.js\";\n  import type { HTMLAttributes } from \"svelte/elements\";\n\n  type TeamMember = {\n    id: string;\n    name: string;\n    role: string;\n    avatar: string;\n  };\n\n  export type Team1Props = {\n    heading?: string;\n    subheading?: string;\n    description?: string;\n    members?: TeamMember[];\n  };\n</script>\n\n<script lang=\"ts\">\n  let {\n    heading = \"Team\",\n    description = \"Our diverse team of experts brings together decades of experience in design, engineering, and product development.\",\n    members = [\n      {\n        id: \"member-1\",\n        name: \"Sarah Chen\",\n        role: \"CEO & Founder\",\n        avatar:\n          \"https://deifkwefumgah.cloudfront.net/shadcnblocks/block/avatar-1.webp\",\n      },\n      {\n        id: \"member-2\",\n        name: \"Marcus Rodriguez\",\n        role: \"CTO\",\n        avatar:\n          \"https://deifkwefumgah.cloudfront.net/shadcnblocks/block/avatar-2.webp\",\n      },\n      {\n        id: \"member-3\",\n        name: \"Emily Watson\",\n        role: \"Head of Design\",\n        avatar:\n          \"https://deifkwefumgah.cloudfront.net/shadcnblocks/block/avatar-3.webp\",\n      },\n      {\n        id: \"member-4\",\n        name: \"David Kim\",\n        role: \"Lead Engineer\",\n        avatar:\n          \"https://deifkwefumgah.cloudfront.net/shadcnblocks/block/avatar-4.webp\",\n      },\n      {\n        id: \"member-5\",\n        name: \"Lisa Thompson\",\n        role: \"Product Manager\",\n        avatar:\n          \"https://deifkwefumgah.cloudfront.net/shadcnblocks/block/avatar-5.webp\",\n      },\n      {\n        id: \"member-6\",\n        name: \"Alex Johnson\",\n        role: \"UX Designer\",\n        avatar:\n          \"https://deifkwefumgah.cloudfront.net/shadcnblocks/block/avatar-6.webp\",\n      },\n    ],\n    class: className,\n    ...restProps\n  }: Team1Props & HTMLAttributes<HTMLElement> = $props();\n</script>\n\n<section class={cn(\"py-32\", className)} {...restProps}>\n  <div class=\"container flex flex-col items-center text-center\">\n    <h2 class=\"my-6 text-2xl font-bold text-pretty lg:text-4xl\">\n      {heading}\n    </h2>\n    <p class=\"mb-8 max-w-3xl text-muted-foreground lg:text-xl\">\n      {description}\n    </p>\n  </div>\n  <div\n    class=\"container mt-16 grid gap-x-8 gap-y-16 md:grid-cols-2 lg:grid-cols-3\"\n  >\n    {#each members as member (member.id)}\n      <div class=\"flex flex-col items-center\">\n        <Avatar.Root class=\"mb-4 size-20 border md:mb-5 lg:size-24\">\n          <Avatar.Image src={member.avatar} />\n          <Avatar.Fallback>{member.name}</Avatar.Fallback>\n        </Avatar.Root>\n        <p class=\"text-center font-medium\">{member.name}</p>\n        <p class=\"text-center text-muted-foreground\">{member.role}</p>\n      </div>\n    {/each}\n  </div>\n</section>\n",
			"type": "registry:component",
			"target": "team1.svelte"
		}
	]
}