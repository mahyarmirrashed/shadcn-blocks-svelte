{
	"$schema": "https://shadcn-svelte.com/schema/registry-item.json",
	"name": "navbar1",
	"title": "Navbar1",
	"type": "registry:component",
	"description": "A navigational component with dynamic menus, offering desktop and mobile layouts, incorporating icons and accordion features for sub-menus.",
	"dependencies": [
		"@lucide/svelte"
	],
	"devDependencies": [
		"@lucide/svelte@^0.544.0"
	],
	"registryDependencies": [
		"accordion",
		"button",
		"navigation-menu",
		"sheet"
	],
	"meta": {
		"author": "mahyarmirrashed"
	},
	"files": [
		{
			"content": "<script lang=\"ts\" module>\n  import * as Accordion from \"$UI$/accordion/index.js\";\n  import { Button } from \"$UI$/button/index.js\";\n  import * as NavigationMenu from \"$UI$/navigation-menu/index.js\";\n  import * as Sheet from \"$UI$/sheet/index.js\";\n  import { cn } from \"$UTILS$.js\";\n  import { type Icon, Book, Menu, Sunset, Trees, Zap } from \"@lucide/svelte\";\n  import type { HTMLAttributes } from \"svelte/elements\";\n\n  type MenuItem = {\n    title: string;\n    url: string;\n    description?: string;\n    icon?: typeof Icon;\n    items?: MenuItem[];\n  };\n\n  type Navbar1Props = {\n    logo?: {\n      url: string;\n      src: string;\n      alt: string;\n      title: string;\n    };\n    menu?: MenuItem[];\n    auth?: {\n      login: {\n        title: string;\n        url: string;\n      };\n      signup: {\n        title: string;\n        url: string;\n      };\n    };\n  };\n</script>\n\n<script lang=\"ts\">\n  let {\n    logo = {\n      url: \"https://www.shadcnblocks.com\",\n      src: \"https://deifkwefumgah.cloudfront.net/shadcnblocks/block/logos/shadcnblockscom-icon.svg\",\n      alt: \"logo\",\n      title: \"Shadcnblocks.com\",\n    },\n    menu = [\n      { title: \"Home\", url: \"#\" },\n      {\n        title: \"Products\",\n        url: \"#\",\n        items: [\n          {\n            title: \"Blog\",\n            description: \"The latest industry news, updates, and info\",\n            icon: Book,\n            url: \"#\",\n          },\n          {\n            title: \"Company\",\n            description: \"Our mission is to innovate and empower the world\",\n            icon: Trees,\n            url: \"#\",\n          },\n          {\n            title: \"Careers\",\n            description: \"Browse job listings and discover our workspace\",\n            icon: Sunset,\n            url: \"#\",\n          },\n          {\n            title: \"Support\",\n            description:\n              \"Get in touch with our support team or visit our community forums\",\n            icon: Zap,\n            url: \"#\",\n          },\n        ],\n      },\n      {\n        title: \"Resources\",\n        url: \"#\",\n        items: [\n          {\n            title: \"Help Center\",\n            description: \"Get all the answers you need right here\",\n            icon: Zap,\n            url: \"#\",\n          },\n          {\n            title: \"Contact Us\",\n            description: \"We are here to help you with any questions you have\",\n            icon: Sunset,\n            url: \"#\",\n          },\n          {\n            title: \"Status\",\n            description: \"Check the current status of our services and APIs\",\n            icon: Trees,\n            url: \"#\",\n          },\n          {\n            title: \"Terms of Service\",\n            description: \"Our terms and conditions for using our services\",\n            icon: Book,\n            url: \"#\",\n          },\n        ],\n      },\n      { title: \"Pricing\", url: \"#\" },\n      { title: \"Blog\", url: \"#\" },\n    ],\n    auth = {\n      login: { title: \"Login\", url: \"#\" },\n      signup: { title: \"Sign up\", url: \"#\" },\n    },\n    class: className,\n    ...restProps\n  }: Navbar1Props & HTMLAttributes<HTMLElement> = $props();\n</script>\n\n{#snippet Navbar1SubMenuLink(item: MenuItem)}\n  <a\n    class=\"flex min-w-80 flex-row gap-4 rounded-md p-3 leading-none no-underline transition-colors outline-none select-none hover:bg-muted hover:text-accent-foreground\"\n    href={item.url}\n  >\n    <div class=\"text-foreground\"><item.icon class=\"size-5 shrink-0\" /></div>\n    <div>\n      <div class=\"text-sm font-semibold\">{item.title}</div>\n      {#if item.description}\n        <p class=\"text-sm leading-snug text-muted-foreground\">\n          {item.description}\n        </p>\n      {/if}\n    </div>\n  </a>\n{/snippet}\n\n{#snippet Navbar1MenuItem(item: MenuItem)}\n  {#if item.items}\n    <NavigationMenu.Item>\n      <NavigationMenu.Trigger>{item.title}</NavigationMenu.Trigger>\n      <NavigationMenu.Content class=\"bg-popover text-popover-foreground\">\n        <div class=\"p-2\">\n          {#each item.items as subItem (subItem.title)}\n            <NavigationMenu.Link class=\"w-80\">\n              {#snippet child()}\n                {@render Navbar1SubMenuLink(subItem)}\n              {/snippet}\n            </NavigationMenu.Link>\n          {/each}\n        </div>\n      </NavigationMenu.Content>\n    </NavigationMenu.Item>\n  {:else}\n    <NavigationMenu.Item>\n      <NavigationMenu.Link\n        href={item.url}\n        class=\"group inline-flex h-10 w-max items-center justify-center rounded-md bg-background px-4 py-2 text-sm font-medium transition-colors hover:bg-muted hover:text-accent-foreground\"\n      >\n        {item.title}\n      </NavigationMenu.Link>\n    </NavigationMenu.Item>\n  {/if}\n{/snippet}\n\n{#snippet Navbar1MobileMenuItem(item: MenuItem)}\n  {#if item.items}\n    <Accordion.Item value={item.title} class=\"border-b-0\">\n      <Accordion.Trigger class=\"text-md py-0 font-semibold hover:no-underline\">\n        {item.title}\n      </Accordion.Trigger>\n      <Accordion.Content class=\"mt-2\">\n        {#each item.items as subItem (subItem.title)}\n          {@render Navbar1SubMenuLink(subItem)}\n        {/each}\n      </Accordion.Content>\n    </Accordion.Item>\n  {:else}\n    <a href={item.url} class=\"text-md font-semibold\">{item.title}</a>\n  {/if}\n{/snippet}\n\n<section class={cn(\"py-4\", className)} {...restProps}>\n  <div class=\"container\">\n    <nav class=\"hidden items-center justify-between lg:flex\">\n      <div class=\"flex items-center gap-6\">\n        <a href={logo.url} class=\"flex items-center gap-2\">\n          <img src={logo.src} alt={logo.alt} class=\"max-h-8 dark:invert\" />\n          <span class=\"text-lg font-semibold tracking-tighter\"\n            >{logo.title}</span\n          >\n        </a>\n        <div class=\"flex items-center\">\n          <NavigationMenu.Root>\n            <NavigationMenu.List>\n              {#each menu as item (item.title)}\n                {@render Navbar1MenuItem(item)}\n              {/each}\n            </NavigationMenu.List>\n          </NavigationMenu.Root>\n        </div>\n      </div>\n      <div class=\"flex gap-2\">\n        <Button asChild variant=\"outline\" size=\"sm\">\n          <a href={auth.login.url}>{auth.login.title}</a>\n        </Button>\n        <Button asChild size=\"sm\">\n          <a href={auth.signup.url}>{auth.signup.title}</a>\n        </Button>\n      </div>\n    </nav>\n\n    <div class=\"block lg:hidden\">\n      <div class=\"flex items-center justify-between\">\n        <a href={logo.url} class=\"flex items-center gap-2\">\n          <img src={logo.src} alt={logo.alt} class=\"max-h-8 dark:invert\" />\n        </a>\n        <Sheet.Root>\n          <Sheet.Trigger>\n            {#snippet children()}\n              <Button variant=\"outline\" size=\"icon\">\n                <Menu class=\"size-4\" />\n              </Button>\n            {/snippet}\n          </Sheet.Trigger>\n          <Sheet.Content class=\"overflow-y-auto\">\n            <Sheet.Header>\n              <Sheet.Title>\n                <a href={logo.url} class=\"flex items-center gap-2\">\n                  <img\n                    src={logo.src}\n                    alt={logo.alt}\n                    class=\"max-h-8 dark:invert\"\n                  />\n                </a>\n              </Sheet.Title>\n            </Sheet.Header>\n            <div class=\"flex flex-col gap-6 p-4\">\n              <Accordion.Root type=\"single\" class=\"flex w-full flex-col gap-4\">\n                {#each menu as item (item.title)}\n                  {@render Navbar1MobileMenuItem(item)}\n                {/each}\n              </Accordion.Root>\n              <div class=\"flex flex-col gap-3\">\n                <Button asChild variant=\"outline\">\n                  <a href={auth.login.url}>{auth.login.title}</a>\n                </Button>\n                <Button asChild>\n                  <a href={auth.signup.url}>{auth.signup.title}</a>\n                </Button>\n              </div>\n            </div>\n          </Sheet.Content>\n        </Sheet.Root>\n      </div>\n    </div>\n  </div>\n</section>\n",
			"type": "registry:component",
			"target": "navbar1.svelte"
		}
	]
}