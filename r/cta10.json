{
	"$schema": "https://shadcn-svelte.com/schema/registry-item.json",
	"name": "cta10",
	"title": "Cta10",
	"type": "registry:component",
	"description": "A call-to-action component with a heading, description, and optional primary and secondary buttons arranged in a single column that becomes a row on larger screens.",
	"registryDependencies": [
		"button"
	],
	"meta": {
		"author": "mahyarmirrashed"
	},
	"files": [
		{
			"content": "<script lang=\"ts\" module>\n  import { Button } from \"$UI$/button/index.js\";\n  import { cn } from \"$UTILS$.js\";\n  import type { HTMLAttributes } from \"svelte/elements\";\n\n  type Cta10Props = {\n    heading?: string;\n    description?: string;\n    buttons?: {\n      primary?: {\n        text: string;\n        url: string;\n      };\n      secondary?: {\n        text: string;\n        url: string;\n      };\n    };\n  };\n</script>\n\n<script lang=\"ts\">\n  let {\n    heading = \"Call to Action\",\n    description = \"Build faster with our collection of pre-built blocks. Speed up your development and ship features in record time.\",\n    buttons = {\n      primary: {\n        text: \"Buy Now\",\n        url: \"https://www.shadcnblocks.com\",\n      },\n    },\n    class: className,\n    ...restProps\n  }: Cta10Props & HTMLAttributes<HTMLElement> = $props();\n</script>\n\n<section class={cn(\"py-32\", className)} {...restProps}>\n  <div class=\"container\">\n    <div\n      class=\"flex w-full flex-col gap-16 overflow-hidden rounded-lg bg-accent p-8 md:rounded-xl lg:flex-row lg:items-center lg:p-12\"\n    >\n      <div class=\"flex-1\">\n        <h3 class=\"mb-3 text-2xl font-semibold md:mb-4 md:text-4xl lg:mb-6\">\n          {heading}\n        </h3>\n        <p class=\"max-w-xl text-muted-foreground lg:text-lg\">\n          {description}\n        </p>\n      </div>\n      <div class=\"flex shrink-0 flex-col gap-2 sm:flex-row\">\n        {#if buttons.secondary}\n          <Button variant=\"outline\" href={buttons.secondary.url}>\n            {buttons.secondary.text}\n          </Button>\n        {/if}\n        {#if buttons.primary}\n          <Button variant=\"default\" size=\"lg\" href={buttons.primary.url}>\n            {buttons.primary.text}\n          </Button>\n        {/if}\n      </div>\n    </div>\n  </div>\n</section>\n",
			"type": "registry:component",
			"target": "cta10.svelte"
		}
	]
}